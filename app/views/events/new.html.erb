<h1>New Event</h1>

<%= form_with(model: @event, local: true, multipart: true) do |form| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for @event, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, :required => true %><br>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, :required => true %><br>
  </div>
  <div class="field">
    <%= f.datetime_local_field :termination_date %>
  </div>
  <div class="field">
      <%= f.label 'Picture Upload' %><br />
      <%= f.file_field :file %><br /><br />
      <%= image_tag @event.file.url(:medium) %><br />
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
  <% end %>

<% end %>


