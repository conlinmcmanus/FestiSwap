</td>
<table class="table">
  <thead>
    <h3>Event</h3>
    <tr>
      <th colspan="4">
        <h4>Latitude:</h4></th>
      <th colspan="4">
        <h4>Longitude:</h4></th>
      <th colspan="4">
        <h4>Radius:</h4></th>
      <th colspan="4">
        <h4>Image:</h4></th>
      <th colspan="4">
        <h4>Title:</h4></th>
      <th colspan="4">
        <h4>Description:</h4></th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td id="event<%= event.id %>_latitude" colspan="4">
          <%= event.latitude %>
        </td>
        <td id="event<%= event.id %>_longitude" colspan="4">
          <%= event.longitude %>
        </td>
        <td id="event<%= event.id %>_radius" colspan="4">
          <%= event.radius %>
        </td>
        <td colspan="4">
          <%= image_tag event.file.url(:thumb) %>
        </td>
        <td colspan="4">
          <a href="<%= event_path(event) %>">
            <%= event.title %>
          </a>
        </td>
        <td colspan="4">
          <%= event.description %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>
<br>
