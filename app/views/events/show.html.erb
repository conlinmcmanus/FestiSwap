<% @ads.map do |ad| %>
  <tr>
    <td>
      <a href="<%= event_ad_path(ad.event, ad) %>">
        <%= ad.title %>
      </a>
    </td>
    <td><%= ad.description %></td>
    <td><%= link_to 'Edit', edit_event_ad_path(ad.event, ad) %></td>
    <td><%= link_to 'Destroy', [ad.event, ad], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

